{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Create an EC2 instance for NtopNG",
    "Parameters": {
        "KeyPair": {
            "Description": "Name of an existing EC2 Key Pair to enable SSH access to the GigaVUE-FM instances",
            "Type": "AWS::EC2::KeyPair::KeyName",
            "ConstraintDescription": "must be the name of an existing EC2 KeyPair."
        },
        "InstanceType": {
            "Description": "GigaVUE-FM EC2 instance type",
            "Type": "String"
        },
        "VPC": {
            "Description": "VPC to launch virtual server in",
            "Type": "AWS::EC2::VPC::Id"
        },
        "Subnet1": {
            "Description": "subnet to launch virtual server in",
            "Type": "AWS::EC2::Subnet::Id"
        }
    },
    "Mappings": {
        "RegionMap": {
            "us-east-1": {
                "ImageID": "ami-9f086de0"
            },
            "us-west-1": {
                "ImageID": "ami-2cbda54c"
            },
            "us-east-2": {
                "ImageID": "ami-c59ce2bd"
            },
            "us-west-2": {
                "ImageID": "ami-4e79ed36"
            },
            "sa-east-1": {
                "ImageID": "ami-b5ecb3d9"
            },
            "eu-central-1": {
                "ImageID": "ami-2fa58dc4"
            },
            "ca-central-1": {
                "ImageID": "ami-c29515a6"
            },
            "eu-west-1": {
                "ImageID": "ami-a26d53db"
            },
            "eu-west-2": {
                "ImageID": "ami-6a4aa80d"
            },
			"eu-west-3": {
                "ImageID": "ami-48813035"
            },
            "ap-southeast-1": {
                "ImageID": "ami-c18cbebd"
            },
            "ap-southeast-2": {
                "ImageID": "ami-4c5b8b2e"
            },
            "ap-northeast-1": {
                "ImageID": "ami-1450ad6b"
            },
            "ap-northeast-2": {
                "ImageID": "ami-5b13ba35"
            },
            "ap-south-1": {
                "ImageID": "ami-7c8ead13"
            }
        }
    },
    "Resources": {
        "NtopNGSG": {
            "Type": "AWS::EC2::SecurityGroup",
            "Properties": {
                "GroupDescription": "SG for NtopNG EC2 Instance",
                "SecurityGroupIngress": [
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "22",
                        "ToPort": "22",
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "443",
                        "ToPort": "443",
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "80",
                        "ToPort": "80",
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "tcp",
                        "FromPort": "3000",
                        "ToPort": "3000",
                        "CidrIp": "0.0.0.0/0"
                    },
                    {
                        "IpProtocol": "udp",
                        "FromPort": "4789",
                        "ToPort": "4789",
                        "CidrIp": "0.0.0.0/0"
                    }
                ],
                "VpcId": {
                    "Ref": "VPC"
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "NtopNG_SG"
                    }
                ]
            }
        },
        "NtopNGInstance": {
            "Type": "AWS::EC2::Instance",
            "Properties": {
                "KeyName": {
                    "Ref": "KeyPair"
                },
                "ImageId": {
                    "Fn::FindInMap": [
                        "RegionMap",
                        {
                            "Ref": "AWS::Region"
                        },
                        "ImageID"
                    ]
                },
                "InstanceType": {
                    "Ref": "InstanceType"
                },
                "NetworkInterfaces": [
                    {
                        "AssociatePublicIpAddress": "True",
                        "DeleteOnTermination": "True",
                        "SubnetId": {
                            "Ref": "Subnet1"
                        },
                        "DeviceIndex": "0",
                        "GroupSet": [
                            {
                                "Ref": "NtopNGSG"
                            }
                        ]
                    }
                ],
                "UserData": {
                    "Fn::Base64": {
                        "Fn::Join": [
                            "",
                            [
                                "#!/bin/bash -ex\n",
                                "VPCCIDR=10.0.0.0/16",
                                "\n",
                                "cd /home/ubuntu/\n",
                                "wget https://s3.amazonaws.com/gigamonartifacts/ntopng_splunk_securityonion/scripts/ntopng.sh\n",
                                "chmod 777 /home/ubuntu/ntopng.sh\n",
                                "sh ntopng.sh $VPCCIDR"
                            ]
                        ]
                    }
                },
                "Tags": [
                    {
                        "Key": "Name",
                        "Value": "NtopNG"
                    }
                ]
            }
        }
    },
    "Outputs": {
        "PublicIp": {
            "Description": "Server's PublicIp Address",
            "Value": {
                "Fn::GetAtt": [
                    "NtopNGInstance",
                    "PublicIp"
                ]
            }
        },
        "PrivateIp": {
            "Description": "The Private IP",
            "Value": {
                "Fn::GetAtt": [
                    "NtopNGInstance",
                    "PrivateIp"
                ]
            }
        }
    }
}